@model AuthenticationLoginViewModel

<div class="row">
    <div class="col col-4 mx-auto h-auto border border-1 rounded-2">
        <h5 class="text-center">Login</h5>
        <div asp-validation-summary="ModelOnly" class="text-danger list-unstyled">
            <ul class="list-unstyled"><li></li></ul>
        </div>
        <form asp-controller="Authentication" asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control">
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary mt-2 mb-2">Login</button>
        </form>
    </div>
</div>



